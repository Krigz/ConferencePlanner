@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Conference Planner</h1>
    <div class="text-left">
        <table class="table">
            <thead>
                <tr>
                    <td colspan="2" class="text-center h2">Schedule of the Day</td>
                </tr>
                <tr>
                    <th>Activity</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model.Activities)
                {
                    <tr>
                        <td>@activity.Name</td>
                        <td>@activity.Duration.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Model.Message