@page "{activityId:int?}"
@model ConferencePlanner.Core.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Activity: @Model.Activity.Name</h1>

<form method="post" action="">
    <div class="form-group">
        <input type="hidden" asp-for="Activity.Id"/>
    </div>
    <div class="form-group">
        <label asp-for="Activity.Name"></label>
        <input type="text" asp-for="Activity.Name" />
        <span class="text-danger" asp-validation-for="Activity.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Activity.Duration"></label>
        <input type="text" asp-for="Activity.Duration" />
        <span class="text-danger" asp-validation-for="Activity.Duration"></span>
    </div>
    <div class="form-group">
        <label asp-for="Activity.Description"></label>
        <input type="text" asp-for="Activity.Description" />
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>

<a asp-page="./Index">Go to Conference Planner</a>